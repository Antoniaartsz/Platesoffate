const modal = document.getElementById('modal');
const charModal = document.getElementById('charModal');
const cardsContainer = document.getElementById('cards-container');
const panelTitle = document.getElementById('panel-title');
const panelBody = document.getElementById('panel-body');
const closeModal = document.getElementById('closeModal');
const closeChar = document.getElementById('closeChar');

document.querySelectorAll('.cat').forEach(el=>{
  el.addEventListener('click', ()=> openCategory(el.dataset.open));
});

closeModal.addEventListener('click', ()=> modal.classList.remove('open'));
closeChar.addEventListener('click', ()=> charModal.classList.remove('open'));

// sliders setup (two sliders for places and lore)
function setupSlider(rootName){
  const container = document.querySelector(`[data-slider="${rootName}"]`);
  if(!container) return;
  const slides = container.querySelector('.slides');
  const dots = container.querySelector('.nav');
  const count = slides.children.length;
  let idx = 0;
  // create dots
  for(let i=0;i<count;i++){
    const d = document.createElement('div');
    d.className='dot'+(i===0?' active':'');
    d.addEventListener('click', ()=>{ idx=i; update(); });
    dots.appendChild(d);
  }
  function update(){
    slides.style.transform = `translateX(-${idx*100}%)`;
    Array.from(dots.children).forEach((n,i)=> n.classList.toggle('active', i===idx));
  }
  setInterval(()=>{
    idx = (idx+1)%count; update();
  },4000);
}
setupSlider('places');
setupSlider('lore');

/* Category open -> populate cards */
function openCategory(cat){
  cardsContainer.innerHTML = '';
  panelTitle.textContent = cat.charAt(0).toUpperCase() + cat.slice(1);
  let list = [];
  if(cat === 'heroes') list = data.heroes;
  if(cat === 'villains') list = data.villains;
  if(cat === 'side') list = data.side;

  list.forEach(item=>{
    const card = document.createElement('div'); card.className='card';
    const imgdiv = document.createElement('div'); imgdiv.className='img';
    imgdiv.style.backgroundImage = item.img ? `url(${item.img})` : `linear-gradient(135deg,#f0e6ff,#fff7e6)`;
    const overlay = document.createElement('div'); overlay.className='overlay';
    const name = document.createElement('div'); name.className='name';
    // hidden/creator handling
    if(item.hidden){
      card.classList.add('mystery');
      name.textContent = '???';
    } else {
      name.textContent = item.name;
    }

    card.appendChild(imgdiv);
    card.appendChild(overlay);
    card.appendChild(name);
    // hover reveal for mystery: clicking reveals modal with forms carousel (creator)
    card.addEventListener('click', (e)=>{
      if(item.hidden){
        // reveal creator details
        openCharacter(item);
      } else {
        openCharacter(item);
      }
    });

    cardsContainer.appendChild(card);
  });

  modal.classList.add('open');
}

/* Open single character */
const charTitle = document.getElementById('char-title');
const charDesc = document.getElementById('char-desc');
const formCarousel = document.getElementById('formCarousel');
const formImg = document.getElementById('formImg');
const prevForm = document.getElementById('prevForm');
const nextForm = document.getElementById('nextForm');
const minionsSection = document.getElementById('minionsSection');
const minionsGrid = document.getElementById('minionsGrid');

let currentForms = [], formIndex = 0;
function openCharacter(item){
  charModal.classList.add('open');
  charTitle.textContent = item.realName ? item.realName : item.name;
  charDesc.textContent = item.desc || 'No description yet. Add one in the data array.';

  // forms handling
  currentForms = Array.isArray(item.forms) ? item.forms : [];
  formIndex = 0;
  if(currentForms.length){
    formCarousel.style.display = 'block';
    formImg.style.backgroundImage = `url('${currentForms[formIndex]}')`;
  } else if (item.img){
    formCarousel.style.display = 'block';
    formImg.style.backgroundImage = `url('${item.img}')`;
  } else {
    formCarousel.style.display = 'none';
  }

  // minions handling
  if(item.minions && item.minions.length){
    minionsSection.style.display = 'block';
    minionsGrid.innerHTML = '';
    item.minions.forEach(m=>{
      const box = document.createElement('div'); box.className='minion';
      const mimg = document.createElement('div'); mimg.className='mimg';
      mimg.style.backgroundImage = m.img ? `url(${m.img})` : '';
      const mname = document.createElement('div'); mname.className='mname';
      mname.textContent = m.name;
      box.appendChild(mimg); box.appendChild(mname);
      box.addEventListener('click', ()=> {
        // open a card for the minion (simple)
        openCharacter({ name:m.name, img:m.img, desc:'Minion of ' + (item.name||item.realName) });
      });
      minionsGrid.appendChild(box);
    });
  } else {
    minionsSection.style.display = 'none';
    minionsGrid.innerHTML = '';
  }

  // special: if villains have gf info, show link
  if(item.gf){
    const gfBox = document.createElement('div');
    gfBox.style.marginTop='10px';
    gfBox.innerHTML = `<strong>Partner:</strong> ${item.gf.name}`;
    minionsGrid.parentNode.insertBefore(gfBox, minionsGrid.nextSibling);
  }
}

/* forms carousel controls */
prevForm.addEventListener('click', ()=> {
  if(!currentForms.length) return;
  formIndex = (formIndex - 1 + currentForms.length) % currentForms.length;
  formImg.style.backgroundImage = `url('${currentForms[formIndex]}')`;
});
nextForm.addEventListener('click', ()=> {
  if(!currentForms.length) return;
  formIndex = (formIndex + 1) % currentForms.length;
  formImg.style.backgroundImage = `url('${currentForms[formIndex]}')`;
});

/* miscellaneous - clicking outside modal closes it */
modal.addEventListener('click', (e)=>{
  if(e.target === modal) modal.classList.remove('open');
});
charModal.addEventListener('click', (e)=>{
  if(e.target === charModal) charModal.classList.remove('open');
});

/* ---------- Populate a small preview grid on page load (show hero thumbnail hero cards for quick browsing) ---------- */
function makePreview(){
  const container = document.createElement('div');
  container.style.marginTop='18px';
  container.className='col';
  const head = document.createElement('h3'); head.textContent='Quick Hero Preview';
  const hint = document.createElement('div'); hint.className='reveal-hint';
  hint.textContent='(Click "Heroes" to view full gallery. Creator is hidden among heroes.)';
  const grid = document.createElement('div'); grid.className='cards';
  // show first 6 heroes including the hidden creator as a blurred card
  const preview = data.heroes.slice(0,6);
  preview.forEach(item=>{
    const c = document.createElement('div'); c.className='card';
    const img = document.createElement('div'); img.className='img';
    img.style.backgroundImage = item.img ? `url(${item.img})` : '';
    const name = document.createElement('div'); name.className='name';
    name.textContent = item.hidden ? '???' : item.name;
    if(item.hidden) c.classList.add('mystery');
    c.appendChild(img); c.appendChild(name);
    c.addEventListener('click', ()=> openCharacter(item));
    grid.appendChild(c);
  });
  container.appendChild(head);
  container.appendChild(grid);
  container.appendChild(hint);
  document.querySelector('.site').insertBefore(container, document.querySelector('footer'));
}
makePreview();

/* ----- small helper: place logo background if user changes it dynamically (optional) ---- */
function setLogo(url){
  const el = document.getElementById('logo');
  if(!url) return;
  el.style.backgroundImage = `url('${url}')`;
}
